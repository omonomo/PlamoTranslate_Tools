<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>dev.omonomo.plamo-server</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/zsh</string>
        <string>-c</string>
        <string>mkdir -p "$TMPDIR" && exec /usr/local/bin/plamo-translate server</string>
    </array>

    <key>EnvironmentVariables</key>
    <dict>
        <key>TMPDIR</key>
        <string>/tmp/plamo-translate</string>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>KeepAlive</key>
    <false/>

    <key>StopOnUnload</key>
    <true/>
</dict>
</plist>
